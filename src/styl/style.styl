@import "./lib/smart-grid.styl"
@import "./lib/mixin-lib.styl"
@import "./lib/var-lib.styl"
@import "./lib/style-lib.styl"
@import "./lib/fonts-lib.styl"

webfont('Roboto', 'Roboto-Regular', true, 'normal')

webfont('Oswald', 'Oswald-Regular', true, 'normal')

reset();


*
    box-sizing border-box
body
    font: 14px 'Roboto';
    color $gray

a
        text-decoration none

.wrapper
    wrapper()
    min-width 1200px //Против адаптивной верстки


.debug
    debug(rgba(0, 0, 0, 0.5), 1px solid #666)




.upLine
    width 100%
    background $grayBlack


.row
    row-flex()



.topMenu
    col()
    size(8)
    ul
        li
            float left
            a
                padding 0 15px
                line-height 65px
                display block
                color #ffffff
                trns(0.5s, background)
                &:hover
                    background $gray



.search
    col()
    size(4)
    line-height 65px
    text-align right
    &__label
        width 70%

    &__submit
        min-width 70px
        width 30%
        trns(0.5s, background)
        cursor pointer
        &:hover
            background $blue


header
    row-flex()
    .logo
        col()
        size(4)
        background red
    .phone
        col()
        size(4)
        background blue
    .callback
        col()
        size(4)
        background yellow












.banner
    width 1920px
    height 645px
    background url("img/banner.jpg") no-repeat 0 0
    margin 0 auto
    










