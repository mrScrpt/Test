@import "./lib/smart-grid.styl"
@import "./lib/mixin-lib.styl"
@import "./lib/var-lib.styl"
@import "./lib/fonts-lib.styl"
reset();
@import "./lib/style-lib.styl"


webfont('Roboto', 'Roboto-Regular', true, 'normal')
webfont('Roboto-bold', 'Roboto-Bold', true, 'bold')

*
    box-sizing border-box

//    BEM____
.phoneline
    row-flex()
    flex-direction column
    justify-content center


    height 100%
    &__number
        col()
        text-align center
        padding 3px
        font-weight bold



.footerBlock
    col()
    size(3)
    &__title
        color #fff
        text-decoration underline

//    BEM____-END


body
    font: 14px 'Roboto';
    color $gray

a
        text-decoration none

.wrapper
    wrapper()
    min-width 1200px //Против адаптивной верстки


.debug
    debug(rgba(0, 0, 0, 0.5), 1px solid #666)




.upLine
    width 100%
    background $grayDark


.row
    row-flex()



.topMenu
    col()
    size(8)
    ul
        li
            float left
            a
                padding 0 15px
                line-height 65px
                display block
                color #ffffff
                trns(0.5s, background)
                &:hover
                    background $gray



.search
    col()
    size(4)
    line-height 65px
    text-align right
    &__label
        width 70%

    &__submit
        min-width 70px
        width 30%



header
    row-flex()
    justify-content center
    .logo
        col()
        size(4)

    .phone
        col()
        size(4)

    .callback
        col()
        size(4)
        
        margin auto

        &__bg
            background url("img/bg__callback.png") no-repeat right
            //background blue
            display block
            width 43%
            height 47px
            float left



        &__link

            float right
            width 53%
            height 47px
            padding-left 15px
            padding-top 5px
            font-size 16px
            background url("img/bg__separator.png") no-repeat 0 0
            a
                color $grayDark
                trns(0.5s, color)
                &:hover
                    color $blueDark







.middleLine
    background $blueDark
    width 100%
    height 65px


.middleMenu
    display inline-block
    ul
        li
            float: left;
            a
                display block
                padding 0 15px
                line-height 65px
                color white
                trns(0.5s, background)
                &:hover
                    background $blue



.bannerContent
    row-flex()

.banner
    width 1920px
    height 645px
    background url("img/banner.jpg") no-repeat 0 0
    margin 0 auto
    margin-bottom 40px
    



.appeal
    col()
    size(8)

    background url("img/img__motivation.png") no-repeat 0 100px



.subscribe
    col()
    size(4)
    margin-top 160px
    text-align center
    &__head
        background $blueDark
        line-height 65px
        color white
        font-size 20px
    &__body
        background url("img/bg__form.png")
        padding 25px 0
        form
            input[type=text]
                width 80%
                margin 12px 0
            input[type=submit]
                margin-top 20px
                font-size 18px




.content
    row-flex()
    margin-bottom 150px
    .leftSide
        col()
        size(8)
    .rightSide
        col()
        size(4)
        .comments
            bs(0.5)
            bdrOne($grayLight)
            &__head
                line-height 65px
                color white
                font-size 20px
                text-align center
                background $gray
            &__body

                height 500px






.bottomLine
    height 380px
    background $grayDark



.footerRow
    row-flex()










